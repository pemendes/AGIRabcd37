{% extends 'base.html.twig' %}

{% block title %}Accueil | Prêts{% endblock %}

{% block body %}
    <h1 class="text-center mt-3 mb-3">Prêts</h1>

    <table id="table" class="table table-striped table-bordered display responsive mt-2 nowrap" style="width:100%">
        <thead>
        <tr class="bg-dark font-weight-bold text-light">
            <td>#</td>
            <td>Nom</td>
            <td>Prénom</td>
            <td>Date du début</td>
            <td>Date de retour</td>
            <td>Actions</td>
        </tr>
        </thead>
        <tbody>
        {% set i = 1 %}
        {% for pret in prets %}
            <tr>
                <td>{{ i }}</td>
                <td>{{ pret.nom }}</td>
                <td>{{ pret.prenom }}</td>
                <td>{{ pret.debut | date('d-m-Y') }}</td>
                <td>{{ pret.fin | date('d-m-Y') }}</td>
                <td><a class="btn btn-info" href="#">Voir articles</a></td>
            </tr>
            {% set i = i+1 %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

