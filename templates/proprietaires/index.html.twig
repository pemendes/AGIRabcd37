{% extends 'base.html.twig' %}

{% block title %}Proprietaires index{% endblock %}

{% block body %}
    <h1>Proprietaires index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Organisme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for proprietaire in proprietaires %}
            <tr>
                <td>{{ proprietaire.id }}</td>
                <td>{{ proprietaire.nom }}</td>
                <td>{{ proprietaire.adresse }}</td>
                <td>{{ proprietaire.organisme }}</td>
                <td>
                    <a href="{{ path('proprietaires_show', {'id': proprietaire.id}) }}">show</a>
                    <a href="{{ path('proprietaires_edit', {'id': proprietaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('proprietaires_new') }}">Create new</a>
{% endblock %}
